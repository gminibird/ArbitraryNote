<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize">

        <Button
            android:id="@+id/back_verification"
            android:layout_width="35dp"
            android:layout_height="30dp"
            android:layout_marginLeft="5dp"
            android:layout_centerVertical="true"
            android:background="@mipmap/ic_back" />

        <TextView
            android:id="@+id/title_verification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="重置密码"
            android:textSize="16sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_alignParentBottom="true"
            android:background="@color/colorEditHint" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="#fff"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/colorEditHint" />

        <EditText
            android:id="@+id/phone_number_verification"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="5dp"
            android:textColor="@color/colorTextGrey"
            android:textSize="16sp"
            android:background="@null"
            android:hint="手机号码"
            android:textColorHint="@color/colorEditHint"
            android:inputType="text"
            android:maxLines="1"
            android:maxLength="11"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/colorEditHint"
            android:layout_marginLeft="5dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <EditText
                android:id="@+id/SMSCode_verification"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:textColor="@color/colorTextGrey"
                android:textSize="16sp"
                android:background="@null"
                android:hint="验证码"
                android:textColorHint="@color/colorEditHint"
                android:inputType="text"
                android:maxLines="1"
                android:maxLength="6"/>
            <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="@color/colorEditHint"
                android:layout_marginLeft="5dp"/>
            <Button
                android:id="@+id/request_verification_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="获取验证码"
                android:textColor="@color/colorEditHint"
                android:background="@null"/>

        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/colorEditHint"
            android:layout_marginLeft="5dp"/>

        <EditText
            android:id="@+id/password_new"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="5dp"
            android:background="@null"
            android:hint="新密码"
            android:inputType="textPassword"
            android:maxLength="11"
            android:maxLines="1"
            android:textColor="@color/colorTextGrey"
            android:textColorHint="@color/colorEditHint"
            android:textSize="16sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="5dp"
            android:background="@color/colorEditHint" />

        <EditText
            android:id="@+id/confirm_password"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="5dp"
            android:background="@null"
            android:hint="确认密码"
            android:inputType="textPassword"
            android:maxLength="11"
            android:maxLines="1"
            android:textColor="@color/colorTextGrey"
            android:textColorHint="@color/colorEditHint"
            android:textSize="16sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/colorEditHint" />

    </LinearLayout>

    <Button
        android:id="@+id/submit_verification"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="#1d8ed9"
        android:text="提    交"
        android:textSize="16sp"
        android:textColor="#fff" />
</LinearLayout>